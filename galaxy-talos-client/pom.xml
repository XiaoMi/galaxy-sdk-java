    <packaging>pom</packaging>
    <version>2.5-SNAPSHOT</version>

    <name>Galaxy Talos SDK</name>
    <description>Xiaomi Galaxy Talos Service SDK</description>
    <url>http://dev.xiaomi.com/doc/?page_id=2095</url>

